<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tick_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="12345"
                android:textSize="35sp"
                android:paddingBottom="10dp"
                />

            <TextView
                android:id="@+id/tv_tick_client"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr Lemons"
                android:layout_above="@+id/tv_tick_last_updated"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tv_tick_last_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="3 hours ago"
                android:layout_above="@+id/v_line"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="10dp"/>

            <View
                android:id="@+id/v_line"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_alignBottom="@id/tv_tick_id"
                android:background="#FBA400"/>

            <TextView
                android:id="@+id/tv_tick_subj"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line"
                android:text="Subject line"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                />

            <TextView
                android:id="@+id/tv_tick_det"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tick_subj"
                android:text="The quick brown fox jumped over the lazy dog"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textStyle="italic"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

