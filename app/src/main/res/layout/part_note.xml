<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_note_pretty_updated"
                style="@style/Base.TextAppearance.AppCompat.Medium"/>

            <View
                android:id="@+id/v_line_note"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_note_pretty_updated"
                android:layout_margin="10dp"
                android:background="#FBA400"
                android:padding="15dp"/>


            <TextView
                android:id="@+id/tv_note_text"
                android:layout_below="@id/v_line_note"
                android:layout_alignStart="@id/v_line_note"
                android:layout_alignLeft="@id/v_line_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>